{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "jsx": "react",
      "module": "commonjs",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "lib": ["es2015", "es2017", "dom"],
      "noImplicitAny": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      // "strict": true
    },
    "include": [
      "**/*",
      "src/declarations.d.ts"
    ]
}